
<h1>Ubicaciones</h1>

<table border = "1" align = "center">
  <tr>
    <th>Nombre</th>
    <th>Tag</th>
    <th></th>
	
<% if (defined?(current_user))
   if current_user != nil && current_user.admin
%>	
    <th></th>
    <th></th>
	
<% end end %>	
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.tag %></td>
    <td><%= link_to 'Mostrar', location %></td>
	
	
<% if (defined?(current_user))
if current_user != nil && current_user.admin
%>
	
    <td><%= link_to 'Editar', edit_location_path(location) %></td>
    <td><%= button_to 'Borrar', location, :confirm => 'Seguro?', :method => :delete %></td>
<% else %> <td></td>
	<td></td>
<% end end  %>
  </tr>
<% end %>
</table>

<br />

