<h1>Listado de Imagenes</h1>

<table>
  <tr>
    <th>Url de la imagen</th>
    <th>Comentario</th>

    <th>Ubicacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.image_url %></td>
    <td><%=raw image.comment %></td>
    <td><%= image.imagelocation %></td>
    <td><%= link_to 'Mostrar', image %></td>
    <td><%= link_to 'Editar', edit_image_path(image) %></td>
    <td><%= button_to 'Eliminar', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Imagen', new_image_path %>
