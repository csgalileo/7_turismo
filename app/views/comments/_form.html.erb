<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> Error:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  
  <div class="field">
    <%= f.label :cod_origin %><br />
	<%= f.collection_select(:cod_origin_id, Origin.all, :id, :description) %>	
  </div> 
  
    
   <div class="field">
    <%= f.label :user %><br />
	<%= f.collection_select(:user_id, User.all, :id, :email) %>	
  </div> 
  
  
   <div class="field">
    <%= f.label :origin %><br />
	<%= f.collection_select(:origin_id, Event.all, :id, :description) %>	
  </div>   
  

  
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
