<h1>Listado de origines</h1>

<table>
  <tr>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @origins.each do |origin| %>
  <tr>
    <td><%= origin.description %></td>
    <td><%= link_to 'Mostrar', origin %></td>
    <td><%= link_to 'Editar', edit_origin_path(origin) %></td>
    <td><%= link_to 'Eliminar', origin, :confirm => 'Seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

